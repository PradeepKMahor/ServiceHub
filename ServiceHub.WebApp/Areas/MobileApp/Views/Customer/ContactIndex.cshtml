@model ServiceHub.WebApp.Models.ContactViewModel
@{
    ViewData["Title"] = "MobileApp Home";
}
@Html.AntiForgeryToken()

@section BreadCrumbs
{
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item ">
            <a asp-action="DashboardIndex" asp-controller="Customer" asp-area="MobileApp">
                <i class="fas fa-home"></i>
            </a>
        </li>
        <li class="breadcrumb-item active font-weight-bold" aria-current="page">Contact</li>
    </ol>

}

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

@if ((bool)@Context.Items["isMobile"] == true)
{
    <div style="display:none">
    </div>

    <div class="container-fluid bg-white border card rounded shadow m-auto col-xl-12 pt-2  ">


        <hr class="m-0" />
        <div class="app-h4 app-card-header mt-3 mb-3">
        </div>

        <div class="bg-gray-active rounded ">
            <div class="table-responsive" style="overflow:auto;">

                <div class="datatable-td-mobile">
                    <div class="card">
                        <div class="card-mobiledatatableView ">
                            <div class="row " style="min-height:130px;">
                                <div class="col-12">
                                    <dl class="row margin-bottom-0">
                                        <dt class="col-4">
                                            @Html.DisplayNameFor(model => model.Address)
                                        </dt>
                                        <dd class="col-8">
                                            Address Line 1
                                            Address Line 2
                                            Address Line 3
                                            Address Line 4
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="card-mobiledatatableView ">
                            <div class="row ">
                                <div class="col-12">
                                    <dl class="row margin-bottom-0">
                                        <dt class="col-4">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </dt>
                                        <dd class="col-8">
                                            ContactUs@ServiceHub.in <i class="fas fa-envelope"></i>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="card-mobiledatatableView ">
                            <div class="row ">
                                <div class="col-12">
                                    <dl class="row margin-bottom-0">
                                        <dt class="col-4">
                                            @Html.DisplayNameFor(model => model.CustomerCare)
                                        </dt>
                                        <dd class="col-8">
                                            845542154<i class="fas fa-phone"></i>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <p>
            For Pro
            <a href=""><b>Click Here to view </b></a>
        </p>
    </div>
}
else
{
    <h1>This screen only for Mobile</h1>
}
