@model ServiceHub.WebApp.Models.CMRFeedbackViewModel
@{
    ViewData["Title"] = "MobileApp Home";
}
@Html.AntiForgeryToken()

@section BreadCrumbs
{
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item ">
            <a asp-action="DashboardIndex" asp-controller="Customer" asp-area="MobileApp">
                <i class="fas fa-home"></i>
            </a>
        </li>

        <li class="breadcrumb-item active  font-weight-bold" aria-current="page">Customer Dashboard</li>
    </ol>

}

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

@if ((bool)@Context.Items["isMobile"] == true)
{
    <div style="display:none">
    </div>

    <div class="container-fluid bg-white border card rounded shadow m-auto col-xl-12 pt-2  ">

        <section>
            <div class="row">
            </div>
        </section>
        <hr class="m-0" />
        <div class="app-h4 app-card-header mt-3 mb-3">

            <div class="row">
                <div class="col-12">
                    <h4 style="font-weight: bold;color: #035d7b!important;">
                        Please Help to rate our services here so we can improve.
                    </h4>
                </div>

            </div>

        </div>
        <br />
        <br />
        <br />
        <br />
        <div class="bg-gray-active rounded ">
            <div class="table-responsive" style="overflow:auto;">

                <div class="datatable-td-mobile">
                    <div class="card">
                        <div class="card-mobiledatatable ">

                            <div class="row ">
                                <div class="col-12 ">
                                    <dl class="row margin-bottom-0">

                                        <dd class="col-lg-6">
                                            <textarea asp-for="Feedback" rows="5" class="form-control capitalize"
                                                      placeholder="Comments displayed here" required>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        </textarea>
                                            <span asp-validation-for="Feedback" class="text-danger"></span>

                                        </dd>
                                    </dl>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>



            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-success btn-md  mb-1 " style="float:right">Submit</button>
        <br />
    </div>
}
else
{
    <h1>This screen only for Mobile</h1>
}
