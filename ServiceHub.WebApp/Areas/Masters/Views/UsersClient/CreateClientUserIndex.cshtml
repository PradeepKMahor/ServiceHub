@model ServiceHub.WebApp.Models.UserRegistrationCreateViewModel

@{
    ViewData["Title"] = "User Registration ";
    var title = "User Registration ";
    var Varid = "";
}
@Html.AntiForgeryToken()

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><a asp-action="Index" asp-controller="Home" asp-area="Masters">Masters</a></li>
        <li class="breadcrumb-item "><a asp-action="UserIndex" asp-controller="Home" asp-area="Masters">User Management</a></li>
        <li class="breadcrumb-item ">
            <a asp-action="Index" asp-controller="UsersClient" asp-area="Masters">Users-Clint list</a>
        </li>

        <li class="breadcrumb-item active" aria-current="page">User Registration </li>
    </ol>

}

<h1 class="text-center">User Registration</h1>

<div class="container-fluid " style="max-width:800px;">


    @* <div class="row d-flex justify-content-center align-items-center h-100"> *@
    <div class="">
        <div class="card rounded-3">
            @* <img id="preview" src="~/images\avatar5.png"
            height="100"
            class="img-circle elevation-2"
            alt="Sample photo"> *@
            <div class="card-body p-4 p-md-5">
                @*                     <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>
                *@
                <form method="post" class="px-md-2"
                      asp-action="CreateClientUserIndex"
                      asp-controller="UsersClient"
                      asp-area="Masters"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="text-center">
                        <img id="preview" style="width:150px!important; max-width:150px!important;min-width:150px!important;" src="~/images\avatar5.png" alt="User Avatar"
                             class="profile-user-img img-fluid img-square">
                        <hr />
                    </div>
                    @* class=" mr-3 img-circle" *@
                    <div class="col-12">

                        <div class="row">
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="FirstName" class="form-control capitalize" required />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="LastName" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="LastName" class="form-control capitalize" required />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="Username" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="Username" class="form-control capitalize" required />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="ContactNo" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="ContactNo" class="form-control capitalize" required />
                                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="EmailId" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="EmailId" class="form-control capitalize" required />
                                        <span asp-validation-for="EmailId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="ValidFromDate" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="ValidFromDate" type="text" placeholder="DD-MMM-YYYY"
                                               class="form-control DateTimePickerInit" required />
                                        <span asp-validation-for="ValidFromDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="ValidToDate" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="ValidToDate" type="text"
                                               class="form-control  DateTimePickerInit" placeholder="DD-MMM-YYYY"
                                               required />
                                        <span asp-validation-for="ValidToDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-12 col-md-12  ">
                                <div class="form-group">
                                    <label asp-for="UploadProfilePic" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input type="file" name="file" accept="image/*"
                                            id="UploadProfilePic"
                                            onchange="loadFile(event)"
                                            class="form-control capitalize "
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="from-group m-2 pb-2">

                            <div class="col-12 ">
                                @*                         Edit   : <partial name="_EditAndBackToListBtn" model="@Convert.ToInt32(1)" />
                                Create :<partial name="_CreateAndBackToListBtn" />
                                *@
                                @* @if (Model.StudentInquiry.Id != 0)
                                {

                                //Edit btn and back to list
                                <partial name="_EditAndBackToListBtn" model="@Convert.ToInt32(Varid)" />
                                }
                                else
                                {

                                // Create btn and back to list
                                <partial name="_CreateAndBackToListBtn" />
                                } *@
                            </div>
                        </div>
                    </div>
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-lg mb-1">Submit</button>

                </form>

            </div>
        </div>
    </div>
</div>
@* </div> *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>

        $(document).ready(function () {
            DateTimePickerInit();

        });

        function DateTimePickerInit() {
            var currYear = moment().year();
            var curYearLastDate = new Date(currYear, 11, 31);
            var curYearMinDate = new Date((currYear - 1), 0, 1);

            $('.DateTimePickerInit').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                time: false,
                 maxDate: curYearLastDate,
                useCurrent: true,
                nowButton: true
            });
             
            $('#ValidFromDate').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false
            }).on('change', function (e, date) {
                alert("change");
                $('#ValidToDate').bootstrapMaterialDatePicker('setMinDate', date);
                $('#ValidToDate').bootstrapMaterialDatePicker('setMaxDate', curYearLastDate);

                $("#ValidToDate").val(date.format('DD-MMM-YYYY'));

            });

            $('#ValidToDate').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false
            }).on('change', function (e, date) {
                $("#ValidToDate").val(date.format('DD-MMM-YYYY'));
            });
        };

        var loadFile = function(event) {
        var output = document.getElementById('preview');
        output.src = URL.createObjectURL(event.target.files[0]);
        output.onload = function() {
            URL.revokeObjectURL(output.src) // free memory
        };
        };

    
    
    </script>

}