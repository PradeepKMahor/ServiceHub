<h1 class="text-center">Update User Registration</h1>

<div class="container-fluid " style="max-width:800px;">


    @* <div class="row d-flex justify-content-center align-items-center h-100"> *@
    <div class="">
        <div class="card rounded-3">
            @* <img id="preview" src="~/images\avatar5.png"
            height="100"
            class="img-circle elevation-2"
            alt="Sample photo"> *@
            <div class="card-body p-4 p-md-5">
                @*                     <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>
                *@
                <form method="post" class="px-md-2"
                      asp-action="UpdateClientUserIndex"
                      asp-controller="UsersClient"
                      asp-area="Masters"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="text-center">
                        <img id="preview" src="@Model.UploadProfilePic" style="width:150px!important; max-width:150px!important;min-width:150px!important;" src="~/images\avatar5.png" alt="User Avatar"
                             class="profile-user-img img-fluid img-square">
                        <hr />
                    </div>
                    @* class=" mr-3 img-circle" *@
                    <div class="col-12">
                        <div class="row">
                            <div class=" col-12 col-md-6  ">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input asp-for="FirstName" class="form-control capitalize" required />
