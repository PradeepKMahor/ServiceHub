@{
    ViewData["Title"] = "Home Page";
}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        @*         <li class="breadcrumb-item "><a asp-action="Index" asp-controller="Home" asp-area="Masters">Masters</a></li>
    *@
        <li class="breadcrumb-item active" aria-current="page">Masters</li>
    </ol>

}

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<div class="col-sm-12">
    <div class="row">

        <div class="col-md-3 col-xl-3">
            <div class="card card-tpl">
                <div class="card-header">
                    <h5>User Access</h5>
                </div>
                <div class="card-block card-tile">
                    <a asp-area="Masters" asp-controller="UserAccess" asp-action="Index">
                        <div class="row align-items-center justify-content-center stretched-link">
                            <div class="col">
                                <h3 class="mb-2 f-w-300"></h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-tie f-20 text-white theme-dark-green"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xl-3">
            <div class="card card-tpl">
                <div class="card-header">
                    <h5>Customer</h5>
                </div>
                <div class="card-block card-tile">
                    <a asp-area="Masters" asp-controller="Customer" asp-action="Index">
                        <div class="row align-items-center justify-content-center stretched-link">
                            <div class="col">
                                <h3 class="mb-2 f-w-300"></h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-tie f-20 text-white theme-dark-green"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-xl-3">
            <div class="card card-tpl">
                <div class="card-header">
                    <h5>Product</h5>
                </div>
                <div class="card-block card-tile">
                    <a asp-area="Masters" asp-controller="Product" asp-action="Index">
                        <div class="row align-items-center justify-content-center stretched-link">
                            <div class="col">
                                <h3 class="mb-2 f-w-300"></h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign f-20 text-white theme-dark-orange"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-xl-3">
            <div class="card card-tpl">
                <div class="card-header">
                    <h5>Service</h5>
                </div>
                <div class="card-block card-tile">
                    <a asp-area="Masters" asp-controller="Service" asp-action="Index">
                        <div class="row align-items-center justify-content-center stretched-link">
                            <div class="col">
                                <h3 class="mb-2 f-w-300"></h3>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-file-signature"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>


